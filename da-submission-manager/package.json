{
  "name": "da-submission-manager",
  "private": true,
  "version": "0.1.0",
  "description": "DA Submission Manager monorepo (API + Web + Templates + Prompts)",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm -r --filter './apps/*' run build",
    "dev": "pnpm -r --parallel --filter '@dasub/api' --filter 'admin' --filter 'web' run dev",
    "dev:all": "(pnpm exec kill-port 3500 5173 5174 || true) && pnpm dev",
    "dev:api": "pnpm --filter @dasub/api run dev",
    "dev:admin": "pnpm --filter admin run dev",
    "dev:web": "pnpm --filter web run dev",
    "test": "pnpm -r --filter './apps/*' run test",
    "seed:concerns": "pnpm --filter @dasub/api run seed:concerns",
    "test:llm": "pnpm --filter @dasub/api run test:llm",
    "setup:gold-coast": "node scripts/setup-gold-coast-project.mjs",
    "setup:auth": "node scripts/setup-authentication.mjs",
    "create:admin": "node scripts/create-admin-user.mjs",
    "clean:cache": "rm -rf apps/*/node_modules/.vite && rm -rf apps/*/.vite && rm -rf apps/*/dist",
    "clean:all": "pnpm clean:cache && rm -rf node_modules && rm -rf apps/*/node_modules",
    "dev:fresh": "pnpm clean:cache && pnpm dev",
    "fix:deps": "pnpm clean:all && pnpm install --frozen-lockfile && pnpm dev",
    "check:imports": "pnpm -r --filter apps... exec grep -r '@heroicons/react' src --include='*.tsx' --include='*.ts' || echo 'No direct heroicon imports found'",
    "troubleshoot": "node scripts/dev-troubleshoot.js",
    "build:ui": "cd packages/ui && pnpm build",
    "build:all": "pnpm build:ui && pnpm build",
    "postinstall": "pnpm build:ui"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "openai": "^4.57.0",
    "p-retry": "^6.2.0"
  },
  "devDependencies": {
    "@da/ui": "workspace:*",
    "kill-port": "^2.0.1",
    "typescript": "^5.5.4"
  }
}
