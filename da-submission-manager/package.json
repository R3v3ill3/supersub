{
  "name": "da-submission-manager",
  "private": true,
  "version": "0.1.0",
  "description": "DA Submission Manager monorepo (API + Web + Templates + Prompts)",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm -r --filter './apps/*' run build",
    "dev": "pnpm -r --parallel --filter '@dasub/api' --filter 'admin' --filter 'web' run dev",
    "dev:api": "pnpm --filter @dasub/api run dev",
    "dev:admin": "pnpm --filter admin run dev",
    "dev:web": "pnpm --filter web run dev",
    "test": "pnpm -r --filter './apps/*' run test",
    "seed:concerns": "pnpm --filter @dasub/api run seed:concerns",
    "test:llm": "pnpm --filter @dasub/api run test:llm",
    "setup:gold-coast": "node scripts/setup-gold-coast-project.mjs",
    "setup:auth": "node scripts/setup-authentication.mjs",
    "create:admin": "node scripts/create-admin-user.mjs"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "p-retry": "^6.2.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "@supabase/supabase-js": "^2.45.4"
  },
  "devDependencies": {
    "typescript": "^5.5.4"
  }
}

