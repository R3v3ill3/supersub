# Railway Environment Variables - API Backend Only
# Configure these in Railway dashboard under Variables tab

# Core Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Authentication & CORS
JWT_SECRET=your_production_jwt_secret_minimum_32_characters
JWT_EXPIRES_IN=7d
ADMIN_ORIGIN=https://admin.yourdomain.com
WEB_ORIGIN=https://submit.yourdomain.com

# AI Configuration - OpenAI (Primary Provider)
OPENAI_API_KEY=sk-proj-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=900
OPENAI_ENABLED=true

# AI Configuration - Google Gemini (Fallback Provider)
GEMINI_API_KEY=AIzaSy...
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=900
GEMINI_ENABLED=true

# Global AI Settings
WORD_LIMIT=600

# Template Configuration
TEMPLATE_VERSION=v1

# Google APIs Configuration (for document generation)
# Get this from Google Cloud Console service account JSON
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}
GOOGLE_DRIVE_FOLDER_ID=1A2B3C...optional_folder_id

# Email Configuration - Production
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your_sendgrid_api_key...

# Alternative Email Configuration (Gmail SMTP)
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_gmail_app_password

# Default Email Settings
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_FROM_NAME=DA Submission Manager

# Webhook Security (optional, for Action Network integration)
ACTION_NETWORK_WEBHOOK_SECRET=your_webhook_secret_if_needed
