# DA Submission Manager Environment Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env with real credentials to git

# Server Configuration
PORT=3500
NODE_ENV=development
LOG_LEVEL=debug  # Options: debug, info, warn, error

# Error Tracking (Optional - Sentry)
# Leave blank to disable Sentry error tracking
# Get your DSN from https://sentry.io
SENTRY_DSN=

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.2
OPENAI_MAX_TOKENS=4000
OPENAI_ENABLED=false
WORD_LIMIT=1750

# Template Configuration
TEMPLATE_VERSION=v1

# Google APIs Configuration (for document generation)
# Get this from Google Cloud Console service account JSON
GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Gemini Configuration (fallback AI provider)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=4000
GEMINI_ENABLED=true

# Email Configuration
# Use 'disabled' for test deployments (no real emails sent; JSON output only)

# For SMTP (Gmail example):
# EMAIL_PROVIDER=smtp
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_gmail_app_password

# For SendGrid:
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Default Email Settings
DEFAULT_FROM_EMAIL=your_organization_email@example.com
DEFAULT_FROM_NAME="Your Organization Name"

# Webhook Security (optional, for Action Network integration)
ACTION_NETWORK_API_KEY=your_action_network_api_key_here
ENCRYPTION_SECRET=generate_a_32_byte_base64_secret_here

# Frontend URLs (used for CORS and redirects)
VITE_API_URL=http://localhost:3500/api
VITE_WEB_URL=http://localhost:3500
ADMIN_ORIGIN=http://localhost:5175
WEB_ORIGIN=http://localhost:5174

# Production URLs (update these for your deployment)
# VITE_API_URL=https://your-api.railway.app/api
# ADMIN_ORIGIN=https://admin.yourdomain.com
# WEB_ORIGIN=https://submit.yourdomain.com